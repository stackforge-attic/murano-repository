{
    "Resources": {
        "$instanceName": {
            "Properties": {
                "NetworkInterfaces": [
                    {
                        "Ref": "$instancePort"
                    }
                ]
            }
        },
        "$instancePort": {
            "Type": "OS::Neutron::Port",
            "Properties": {
                "security_groups": [
                    {
                        "Ref": "MuranoDefaultSecurityGroup"
                    }
                ],
                "network_id": {
                    "Ref": "$network"
                },
                "fixed_ips": [
                    {
                        "subnet_id": {
                            "Ref": "$subnet"
                        }
                    }
                ]
            }
        }
    },

    "Outputs": {
    }
}
