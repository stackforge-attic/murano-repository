{
    "Resources": {
        "$instancePort": {
            "Properties": {
                "allowed_address_pairs": [
                    {
                        "ip_address": "$clusterIp"
                    }
                ]
            }
        },
        "$MuranoSecurityGroup-{envName}": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "SecurityGroupIngress": [
                    {
                        "ToPort": "3343",
                        "IpProtocol": "tcp",
                        "FromPort": "3343",
                        "CidrIp": "$cidr"
                    },
                    {
                        "ToPort": "3343",
                        "IpProtocol": "udp",
                        "FromPort": "3343",
                        "CidrIp": "$cidr"
                    },
                    {
                        "ToPort": "135",
                        "IpProtocol": "tcp",
                        "FromPort": "135",
                        "CidrIp": "$cidr"
                    },
                    {
                        "ToPort": "137",
                        "IpProtocol": "udp",
                        "FromPort": "137",
                        "CidrIp": "$cidr"
                    },
                    {
                        "ToPort": "65535",
                        "IpProtocol": "udp",
                        "FromPort": "49152",
                        "CidrIp": "$cidr"
                    }
                ]
            }
        }
    }
}
